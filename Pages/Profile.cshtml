@page
@model ProiectDAW.Pages.ProfileModel
@{
	ViewData["Title"] = "Profile";
}

<div class="text-start">
	<h2 class="display-1">My profile</h2>
	<h3>Edit:</h3>
	<form asp-page="Profile" method="post">
		<div asp-validation-summary="All" class="text-danger"></div>
		<input type="hidden" asp-for="@Model.profile.UserId" value="@Model.profile.UserId"/>
		<label class="form-label" asp-for="@Model.profile.UserName"></label>
		<input  class="form-control" asp-for="@Model.profile.UserName"/>
		<p> </p>

		<img style="width:15px;height:15px;"src="@Model.profile.AvatarUri" alt="" />
		<input class="form-control" asp-for="@Model.profile.AvatarUri" />
		<p> </p>

		<label asp-for="@Model.profile.Description"></label>
		<input class="form-control" asp-for="@Model.profile.Description" />

		<p> </p>
		<input type="submit" class="btn btn-outline-primary col-12">
	</form>
	<br />
	<h3>Posts:</h3>
	<ul class="list-group">
		@foreach (var item in Model.profile.posts)
		{
			<li class="list-group-item"> <a asp-page="/post" asp-route-id="@item.PostId">@item.PostTitle</a> </li>
		}
	</ul>
	<br />

	<h3>Comments:</h3>
	<ul class="list-group">
		@foreach (var item in Model.profile.comments)
		{
			<li class="list-group-item"> <a asp-page="/post" asp-route-id="@item.PostId">@item.CommentText</a> </li>
		}
	</ul>
	
</div>
